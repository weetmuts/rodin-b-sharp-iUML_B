       		 name="command.name.generate">
 	    </command>
  	</extension>

   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="ac.soton.eventb.emf.diagrams.generator.actions.GenerateAction"
            commandId="ac.soton.eventb.statemachines.generator.generateEventB">
         <enabledWhen>
            <and>
               <with
                     variable="activeEditor">
                  <instanceof
                        value="ac.soton.eventb.statemachines.diagram.part.StatemachinesDiagramEditor">
                  </instanceof>
               </with>
            </and>
         </enabledWhen>
      </handler>
